                    @Html.DisplayNameFor(model => model.AllProjects.First().Updated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AllProjects.First().Users)
                </th>
            </tr>

            @foreach (var item in Model.AllProjects)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Updated)
                    </td>
                    <td>
                        @foreach (ApplicationUser user in item.Users)
                        {
                            @Html.DisplayFor(u => user.DisplayName)
                            <br />
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                        @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                        {
                            @Html.ActionLink("Assign", "Assign", new { projectId = item.Id })
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        }
                    </td>
                </tr>
            }
        </table>
    </body>
}
