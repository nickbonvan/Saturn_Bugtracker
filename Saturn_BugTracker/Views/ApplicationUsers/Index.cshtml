    </div>
    -->
</div>
<div class="app-heading-container app-heading-bordered bottom">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Application</a></li>
        <li class="active">User Management</li>
    </ul>
</div>
<!-- END PAGE HEADING -->

<!-- START CONTAINER -->
<div class="container">
    <!-- START ROW -->
    <div class="row">
        <!-- START COL-->
        <div class="col-md-12">
            <!-- START BLOCK -->
            <div class="block">
                <!-- START BLOCK CONTENT -->
                <div class="block-content">

                    <h2 style="text-align:center">User Management</h2>
                    <hr />
                    <hr />
                    <table class="table table-striped table-bordered datatable-extended">
                        <thead>
                            <tr>
                                <th>
                                    First Name
                                </th>
                                <th>
                                    Last Name
                                </th>
                                <th>
                                    Display Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Phone Number
                                </th>
                                <th>
                                    User Name
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DisplayName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        <a title="Details" href="@Url.Action("Details", "ApplicationUsers", new { id = item.Id })" class="btn btn-primary btn-icon"><span class="icon-menu-circle"></span></a>
                                        <a title="Edit" href="@Url.Action("Edit", "ApplicationUsers", new { id = item.Id })" class="btn btn-warning btn-icon"><span class="icon-question-circle"></span></a>
                                        <a title="Delete" href="@Url.Action("Delete", "ApplicationUsers", new { id = item.Id })" class="btn btn-danger btn-icon"><span class="icon-cross-circle"></span></a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                    <p>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-block">New User</a>
                    </p>
                </div>
                <!-- END BLOCK CONTENT -->
            </div>
            <!-- END BLOCK -->
        </div>
        <!-- END COL-->
    </div>
    <!-- END ROW -->
</div>
<!-- END CONTAINER -->
