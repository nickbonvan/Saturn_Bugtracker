@model Saturn_BugTracker.Models.Ticket

<!-- START PAGE HEADING -->
<div class="app-heading app-heading-bordered app-heading-page">
    <div class="icon icon-lg">
        <span class="icon-laptop-phone"></span>
    </div>
    <div class="title">
        <h1>Saturn Manager</h1>
        <p>Welcome!</p>
    </div>
    <!--
    <div class="heading-elements">
        <a href="#" class="btn btn-danger" id="page-like"><span class="app-spinner loading"></span> loading...</a>
        <a href="https://themeforest.net/item/boooya-revolution-admin-template/17227946?ref=aqvatarius&license=regular&open_purchase_for_item_id=17227946" class="btn btn-success btn-icon-fixed"><span class="icon-text">$24</span> Purchase</a>
    </div>
    -->
</div>
<div class="app-heading-container app-heading-bordered bottom">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Application</a></li>
        <li><a href="@Url.Action("Details", "Projects", new { id = Model.ProjectId })">Project</a></li>
        <li><a href="@Url.Action("Details", "Tickets", new { id = Model.Id })">Ticket</a></li>
        <li class="active">Delete Ticket</li>
    </ul>
</div>
<!-- END PAGE HEADING -->

<div class="container">
    <div class="row">
        <div class="col-md-6 col-lg-offset-3">
            <div class="block">
                <div class="block-content">
                    <h2 style="text-align:center">Delete Ticket</h2>
                    <h3 style="text-align:center; margin-bottom:25px;">Are you sure you want to delete this ticket?</h3>
                    <!-- START TABLE -->
                    <table class="table table-striped table-bordered">
                        <!-- START TABLE BODY -->
                        <tbody>
                            <tr>
                                <td><strong>Assignee </strong></td>
                                @if (Model.Assignee != null)
                                {
                                    <td>@Html.DisplayFor(model => model.Assignee.DisplayName)</td>
                                }
                                else
                                {
                                    <td><strong>Unassigned</strong></td>
                                }
                            </tr>
                            <tr>
                                <td><strong>Author </strong></td>
                                <td>@Html.DisplayFor(model => model.Author.DisplayName)</td>
                            </tr>
                            <tr>
                                <td><strong>Priority</strong></td>
                                <td>@Html.DisplayFor(model => model.Priority.Name)</td>
                            </tr>
                            <tr>
                                <td><strong>Project</strong></td>
                                <td>@Html.DisplayFor(model => model.Project.Title)</td>
                            </tr>
                            <tr>
                                <td><strong>Status</strong></td>
                                <td>@Html.DisplayFor(model => model.Status.Name)</td>
                            </tr>
                            <tr>
                                <td><strong>Type</strong></td>
                                <td>@Html.DisplayFor(model => model.Type.Name)</td>
                            </tr>
                            <tr>
                                <td><strong>Title</strong></td>
                                <td>@Html.DisplayFor(model => model.Title)</td>
                            </tr>
                            <tr>
                                <td><strong>Description</strong></td>
                                <td>@Html.DisplayFor(model => model.Description)</td>
                            </tr>
                            <tr>
                                <td><strong>Created</strong></td>
                                <td>@Html.DisplayFor(model => model.Created.LocalDateTime)</td>
                            </tr>
                            @if (Model.Updated.GetValueOrDefault() != new DateTimeOffset())
                            {
                                <tr>
                                    <td><strong>Updated</strong></td>
                                    <td>@Html.DisplayFor(model => model.Updated.GetValueOrDefault().LocalDateTime)</td>
                                </tr>
                            }
                        </tbody>
                        <!-- END TABLE BODY -->
                    </table>
                    <!-- END TABLE -->

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color" style="text-align:center;">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            @Html.ActionLink("Return", "Index", "Dashboard", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>